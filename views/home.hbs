<script>
document.getElementById('testimonials-toggle').addEventListener('click', function() {
  document.getElementById('testimonials').classList.toggle('open');
});
var onScreenshotClick = function(ev) {
  window.open(ev.target.src, '_blank');
};
var screenshots = document.querySelectorAll('.marketing-screenshot');
for (var i = 0; i < screenshots.length; i++) {
  screenshots[i].addEventListener('click', onScreenshotClick);
}
</script>

